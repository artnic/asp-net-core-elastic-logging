{
  "Serilog": {
     "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [{ 
        "Name": "Elasticsearch", 
        "Args": { 
          "nodeUris": "http://localhost:9200",
          "indexFormat": "api-log-{0:yyyy.MM}",
          "inlineFields": true,
          "bufferBaseFilename": "C:/logs/buffer",
          "bufferFileSizeLimitBytes": 5242880,
          "bufferLogShippingInterval": 5000,
          "minimumLogEventLevel": "Information"
        }       
    }]
  }
}
